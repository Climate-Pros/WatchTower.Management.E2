@page "/"

<PageTitle>Home</PageTitle>

<div class="mx-auto">
    <iframe id="jobsFrame" width="100%" height="100%" src="/admin-ui/jobs" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<script>

    let resizeIframe = () => {
        document.getElementsByTagName('iframe')[0].width = window.innerWidth - 375;
        document.getElementsByTagName('iframe')[0].height = window.innerHeight - 100;
    };

    window.onload = () => {
        resizeIframe();
    }

    window.onresize = () => {
        resizeIframe();
    };
    
    setTimeout(() => resizeIframe(), 1000);
</script>
